{
  "name": "git-multi-sync-tool",
  "version": "1.0.3",
  "description": "基于文本配置的Git多仓库同步工具，支持一键推送到多个远程仓库",
  "main": "lib/sync-engine.js",
  "bin": {
    "git-sync": "./bin/git-sync.js",
    "gits": "./bin/git-sync.js"
  },
  "scripts": {
    "test": "node test/simple-test.js",
    "test:full": "node scripts/test-publish.js",
    "test:debug": "node scripts/debug-commit.js",
    "prepublishOnly": "npm test",
    "dry-run": "npm pack --dry-run",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "release": "npm test && npm publish"
  },
  "keywords": [
    "git",
    "sync",
    "multiple",
    "remote",
    "repository",
    "batch",
    "push",
    "pull"
  ],
  "author": "samuelyang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YangHuangYao/git-sync-tool"
  },
  "bugs": {
    "url": "https://github.com/YangHuangYao/git-sync-tool/issues"
  },
  "homepage": "https://github.com/YangHuangYao/git-sync-tool#readme",
  "engines": {
    "node": ">=14.14.0"
  },
  "files": [
    "bin/",
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "fs-extra": "^11.1.0"
  },
  "devDependencies": {
    "mock-fs": "^5.1.4"
  }
}

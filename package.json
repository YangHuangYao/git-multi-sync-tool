{
  "name": "git-multi-sync-tool",
  "version": "1.0.6",
  "description": "基于文本配置的Git多仓库同步工具，支持一键推送到多个远程仓库",
  "main": "dist/lib/sync-engine.js",
  "bin": {
    "git-sync": "dist/bin/git-sync.js",
    "gits": "dist/bin/git-sync.js"
  },
  "scripts": {
    "preinstall": "node scripts/check-node-version.js",
    "build": "tsc",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "check-version": "node scripts/check-npm-version.js",
    "auto-bump-version": "node scripts/auto-bump-version.js",
    "check-auth": "node scripts/check-npm-auth.js",
    "prepublishOnly": "npm run check-auth && npm run auto-bump-version && npm run clean && npm run build && npm test",
    "test": "node test/simple-test.js",
    "test:full": "node scripts/test-publish.js",
    "test:debug": "node scripts/debug-commit.js",
    "dry-run": "npm pack --dry-run",
    "changelog": "node scripts/generate-changelog.js",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "postversion": "npm run changelog && git add README.md",
    "release": "npm run build && npm test && npm publish"
  },
  "keywords": [
    "git",
    "sync",
    "multiple",
    "remote",
    "repository",
    "batch",
    "push",
    "pull"
  ],
  "author": "samuelyang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samuelyhy/git-multi-sync-tool.git"
  },
  "bugs": {
    "url": "https://github.com/samuelyhy/git-multi-sync-tool/issues"
  },
  "homepage": "https://github.com/samuelyhy/git-multi-sync-tool#readme",
  "engines": {
    "node": ">=20.10.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "fs-extra": "^11.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "conventional-changelog-cli": "^5.0.0",
    "mock-fs": "^5.1.4",
    "typescript": "^5.3.3"
  }
}
